{
  "name": "playwright-reports-server",
  "version": "5.7.4",
  "description": "Playwright Reports Server: Can be used to accept blobs, merge them, store and view Playwright reports",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --restart-tries=1 \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=@playwright-reports/backend",
    "dev:frontend": "npm run dev --workspace=@playwright-reports/frontend",
    "dev:shared": "npm run dev --workspace=@playwright-reports/shared",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=@playwright-reports/backend",
    "build:frontend": "npm run build --workspace=@playwright-reports/frontend",
    "build:shared": "npm run build --workspace=@playwright-reports/shared",
    "start": "npm run start --workspace=@playwright-reports/backend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test --workspace=@playwright-reports/backend",
    "test:frontend": "npm run test --workspace=@playwright-reports/frontend",
    "test:e2e": "npx playwright test",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "npm run format --workspaces --if-present",
    "format:check": "npm run format:check --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "clean:modules": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "install:all": "npm install",
    "install:backend": "npm install --workspace=@playwright-reports/backend",
    "install:frontend": "npm install --workspace=@playwright-reports/frontend",
    "install:shared": "npm install --workspace=@playwright-reports/shared"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cyborgtests/reporter-playwright-reports-server": "^2.3.3",
    "@types/node": ">=22.10.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
